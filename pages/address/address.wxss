
.address-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  padding: 30rpx;
}

.address-avator {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color:#eee;
  overflow: hidden;
  font-size: 28rpx;
  line-height: 60rpx;
  text-align: center;
}

.address-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 50rpx;
  flex-grow: 1;
}

.info {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.name {
  font-size: 32rpx;
  margin-right: 30rpx;
  color: #000;
}

.phone {
  font-size: 24rpx;
  color: #d0d0d0;
  align-self: flex-end;
}

.address {
  font-size: 24rpx;
  margin-top: 10rpx;
}

.default {
  text-align: center;
  font-size: 26rpx;
  padding: 5rpx 10rpx;
  margin-right: 20rpx;
  color: 	#FF4500;
  border: 1px solid	#FF4500;
}

.delete {
  font-size: 24rpx;
  text-align: center;
  position: relative;
  color: #FF4500;
}

.delete::before {
  content: '';
  height: 50rpx;
  width: 4rpx;
  background-color: #eee;
  position: absolute;
  top: -25%;
  left: -50%;
}

.add {
  text-align: center;
  width: 40%;
  margin: 0 auto;
  margin-top: 80rpx;
  border: 5rpx solid #0387FE;
  border-radius: 20rpx;
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #0387FE;
}