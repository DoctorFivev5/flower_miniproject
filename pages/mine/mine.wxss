/* pages/mine/mine.wxss */
.userinfo {
  display: flex;
  /* flex-direction: column; */
  /* align-items: flex-start; */
  /* cursor: pointer; */
  border-bottom: 1rpx solid #ccc;
  background-color: #0387FE;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 50rpx;
  /* 圆角 */
  border-radius: 50%;
}

.userinfo-nickname {
  
  color: #aaa;
  margin-top: 70rpx;
}

/**
* 订单
*/

.orderList {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-top: 50rpx;
}

.order-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.order-image {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 10rpx;
}

.order-text {
  font-size: 24rpx;
  text-align: center;
}

/**
* 功能选项
*/

.functionArea {
  display: flex;
  flex-direction: column;
}

.list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 30rpx 30rpx 30rpx 50rpx;
  margin: 20rpx 0;
  border-bottom: 1px solid #eee;
}

.icon {
  width: 45rpx;
  height: 45rpx;
}

.name {
  font-size: 24rpx;
  text-align: left;
  flex-grow: 1;
  padding-left: 50rpx;
}

.arrow {
  width: 40rpx;
  height: 40rpx;
}