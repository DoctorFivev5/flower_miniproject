<!-- banner -->
<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{imgUrls}}" wx:key='id'>
    <swiper-item>
      <image src="{{item}}" mode='widthFix' data-src="{{item}}" bindtap="previewImage"></image>
    </swiper-item>
  </block>
</swiper>
<scroll-view scroll-y="true">
  <view class="detail">
    <text class="title">{{product.name}}</text>
    <text class="price">￥{{product.price}}</text>
  </view>
  <view class="separate"></view>

   <!-- sku选择 -->
  <text bindtap="toggleDialog">请选择购买数量</text>
  <view class="dialog {{ showDialog ? 'dialog--show' : '' }}">
    <view class="dialog__mask" bindtap="closeDialog" />
    <view class="dialog__container">
      <view class="row">
         <image bindtap="closeDialog" class="image-close" src="../../images/close.png"></image>
        <image class="image-sku" src="{{imgUrls[0]}}"></image>
        <view class="column">
          <text class="sku-price">￥{{product.price}}</text>
          <text class="sku-title">库存{{product.inventory}}件</text>
           <text class="sku-title">商品编码：{{product.id}}</text>
        </view>
      </view>
      <view class="border-line"></view>
      <view class="row">
        <text >购买数量</text>
        <view class="quantity-position">
          <view class="stepper">
            <!-- 减号 -->
            <text class="{{minusStatus}}" bindtap="bindMinus">-</text>
            <!-- 数值 -->
            <input type="number" bindchange="bindManual" value="{{num}}" />
            <!-- 加号 -->
            <text class="normal" bindtap="bindPlus">+</text>
          </view>
        </view>
      </view>
      <view class="border-line"></view>
      <button class="button-green" bindtap="addCar" formType="submit">加入购物车</button>
      <!-- 跳转到购买界面 -->
      <!-- <navigator url='../buy/buy?id={{product.id}}&number={{num}}'> -->
        <button class="button-red" bindtap='buy' formType="submit">立即购买</button>
      <!-- </navigator> -->
    </view>
  </view>


  <view class="separate"></view>
  <text>商品评价</text>
  <text class="text-remark">东西还可以，好评~</text>
  <view class="separate"></view>
  <text>商品详情</text>
  <block wx:for-items="{{detailImg}}" wx:key="name">
    <image class="image_detail" src="{{item}}" />
  </block>
  <view class="temp"></view>
</scroll-view>
<!-- 底部悬浮栏 -->
<view class="detail-nav">
  <image bindtap="toCar" src="../../images/icon_shop.png" />
  <view class="line_nav"></view>
  <image bindtap="addLike" src="{{isLike?'../../images/icon_heart_press.png':'../../images/icon_heart.png'}}" />
  <button class="button-green" bindtap="addCar" formType="submit">加入购物车</button>
  <!-- <navigator class='navigator-red' url='../buy/buy?id={{product.id}}&number={{num}}'> -->
    <button class="button-red" bindtap='buy' formType="submit">立即购买</button>
  <!-- </navigator> -->
</view>