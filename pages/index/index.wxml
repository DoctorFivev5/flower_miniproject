<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{imgUrls}}" wx:key='id'>
    <swiper-item>
      <image src="{{item}}" mode='widthFix' data-src="{{item}}" bindtap="previewImage"></image>
    </swiper-item>
  </block>
</swiper>

<!-- <view class="border-line"></view> -->
<text class='random_text'>~{{week}}推荐~</text>
<scroll-view class='random_product' scroll-y="true">
  <view class="card" wx:for='{{productData}}' wx:key='id'>
  <navigator url='../detail/detail?id={{item.id}}'>
    <view >
        <image class="image" mode="aspectFill" src="{{item.image[0]}}"/>
        <view class="title">{{item.name}}</view>
        <view class='price'>￥{{item.price}}</view>
        <!-- <view class='extra'>{{item.introduce}}</view> -->
    </view>
  </navigator>
  </view>
  <view wx:if="{{productData==''}}">
    <view class='tip'>今天不推荐！</view>
  </view>
  <view wx:else>
    <view class='tip'>今天推荐麻油啦</view>
  </view>
</scroll-view>
