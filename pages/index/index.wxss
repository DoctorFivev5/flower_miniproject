swiper {
  height: 400rpx;
}
swiper-item image {
   width: 100%;
}
.border-line {
  width: 100%;
  height: 50rpx;
  display: inline-block;
  margin: 10rpx 0rpx;
  text-align: center;
  background-color: gray;
}

.card {
    width: 98%;
    border: 2px solid #ffffff;
    border-radius: 5px;
    background-color: #ffffff;
    
    margin-left: 1px;
    margin-right: 1px;
    margin-top: 3px;
    margin-bottom: 1px;
    display: inline-block;
    position: relative;
}

.image {
    width: 100%;
    height: 200px;
    background-color: #eeeeee;
}

.title{
  font-size: 12pt;
}
.price{
  font-size: 10pt;
  color: red;
}
.extra{
 font-size: 8pt;
}
.random_text{
  display: flex;
  align-items: center;
  justify-content: center;  
  width: 100%;
  font-size: 16pt;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
}
.tip{
  display: flex;
  align-items: center;
  justify-content: center;  
  width: 100%;
  font-size: 10pt;
}