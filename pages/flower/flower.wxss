.page_row{  
  width: 100%;
  display: flex;  
  flex-direction: row;
  position:fixed;
  top:0;
  z-index: 2;
  height: 75rpx; 
  background-color: white;
} 
.search{  
  width: 98%;  
  background-color: white;

}  
.search_arr {  
  border: 1px solid #d0d0d0;  
  border-radius: 10rpx;  
  margin-left: 20rpx;  
}  
.search_arr input{  
  margin-left: 60rpx;  
  height: 60rpx;  
  border-radius: 5px;  
}  
.bc_text {  
  line-height: 68rpx;  
  height: 68rpx;  
  margin-top: 34rpx;  
}  
  
.sousuo {  
  margin-left: 15rpx;  
  width: 15%;  
  line-height: 150%;  
  text-align: center;  
  border: 1px solid #d0d0d0;  
  border-radius: 10rpx;  
}   
.searchicon {  
  margin: 10rpx 10rpx 10rpx 10rpx;  
  position: absolute;  
  left:25rpx;  
  z-index: 2;  
  width: 20px;  
  height: 20px;  
  text-align: center;  
}


.scroll_type {
  height: 60rpx;
  line-height: 60rpx;
  white-space: nowrap;
  display: flex;
  position:fixed;
  top: 75rpx;
  z-index: 2;
  background-color: white;
  }
  .scroll_type .type_item {
    margin-left: 20px;
    font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;   
    height: 40px;
    display: inline-block;
    align-content: center
  }
 
  .scroll_type .type_item:first-child{
    margin-left: 10px;
  }
  .scroll_type .type_item:last-child{
    margin-right: 10px;
  }

.scroll_product{
  margin-top: 135rpx;
  z-index: 1;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  background-color: #F4F4F4;
}

.card {
    width: 46%;
    border: 2px solid #ffffff;
    border-radius: 5px;
    background-color: #ffffff;
    
    margin-left: 5px;
    margin-top: 5px;
    margin-bottom: 1px;
    display: inline-block;
    position: relative;
}

.image {
    width: 100%;
    height: 150px;
    background-color: #eeeeee;
}

.time {
    float: right;
    margin-top: 170px;
    color: #ffffff;
    position: absolute;
    right: 0;
    top: 0;
    z-index: 1;
    font-size: 12px;
}
.title{
  font-size: 12pt;
}
.price{
  font-size: 10pt;
  color: red;
}
.extra{
 font-size: 8pt;
 
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.tip{
  width: 100%; 
  display: flex; 
  align-items: center;
  justify-content: center;
}
